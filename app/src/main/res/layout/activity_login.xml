<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/nomeText"
            android:hint="username" app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="29dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/passwordText"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordText"
            android:hint="@string/password" app:layout_constraintStart_toStartOf="@+id/nomeText"
            android:layout_marginBottom="28dp" app:layout_constraintBottom_toTopOf="@+id/loginBtn"/>
    <Button
            android:text="ACCEDI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loginBtn"
            app:layout_constraintStart_toStartOf="@+id/passwordText"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="89dp" app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:backgroundTint="#314ABD" android:textColor="#03A9F4"
    />
    <TextView
            android:text="UÃ¨Capo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:textSize="50dp"
            android:textColor="#03A9F4" android:layout_marginBottom="48dp"
            app:layout_constraintBottom_toTopOf="@+id/nomeText" app:layout_constraintStart_toStartOf="@+id/nomeText"
            android:layout_marginStart="19dp"/>
    <ImageView
            android:layout_width="197dp"
            android:layout_height="0dp" app:srcCompat="@drawable/uecapo"
            android:id="@+id/imageView"
            android:layout_marginTop="84dp"
            android:layout_marginBottom="277dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/loginBtn" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="REGISTRATI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnRegistrati" android:layout_marginBottom="88dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/loginBtn"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.141"
            android:backgroundTint="#314ABD" android:textColor="#03A9F4"

    />
</androidx.constraintlayout.widget.ConstraintLayout>